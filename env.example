# =================================
# FRONTEND CONFIGURATION
# =================================

# Backend API URL - This should point to your NovateScribe backend server
# For local development: http://localhost:5000 (if backend runs on port 5000)
# For production: https://your-backend-domain.com
# Used for authentication, notes, and dashboard statistics (GET /health/dashboard-stats)
NEXT_PUBLIC_BACKEND_URL=http://localhost:5000

# Optional: Sentry DSN for error tracking (only if you have Sentry configured)
# SENTRY_DSN=your-sentry-dsn-here

# Optional: Environment name for monitoring
# NODE_ENV=development

# Frontend App URL (optional, for metadata)
NEXT_PUBLIC_APP_URL=http://localhost:3000

# Application URLs
NEXT_PUBLIC_APP_URL=http://localhost:3000
NEXT_PUBLIC_BACKEND_URL=http://localhost:5000
NEXT_PUBLIC_API_VERSION=v1

# Environment
NODE_ENV=development

# Authentication
NEXT_PUBLIC_JWT_EXPIRY=7d
NEXT_PUBLIC_COOKIE_NAME=novatescribe_session

# Feature Flags
NEXT_PUBLIC_ENABLE_FAST_TRANSCRIPTION=true
NEXT_PUBLIC_ENABLE_ANALYTICS=true

# Performance
NEXT_PUBLIC_API_TIMEOUT=30000
NEXT_PUBLIC_MAX_RETRIES=3



