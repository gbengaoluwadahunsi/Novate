# =================================
# FRONTEND CONFIGURATION
# =================================

# Backend API URL - This should point to your NovateScribe backend server
# For local development: http://localhost:5000 (if backend runs on port 5000)
# For production: https://your-backend-domain.com
# Used for authentication, notes, and dashboard statistics (GET /health/dashboard-stats)
NEXT_PUBLIC_BACKEND_URL=http://localhost:5000

# Optional: Sentry DSN for error tracking (only if you have Sentry configured)
# SENTRY_DSN=your-sentry-dsn-here

# Optional: Environment name for monitoring
# NODE_ENV=development

# Frontend App URL (optional, for metadata)
NEXT_PUBLIC_APP_URL=http://localhost:3000

# Application URLs
NEXT_PUBLIC_APP_URL=http://localhost:3000
NEXT_PUBLIC_BACKEND_URL=http://localhost:5000
NEXT_PUBLIC_API_VERSION=v1

# Environment
NODE_ENV=development

# Authentication
NEXT_PUBLIC_JWT_EXPIRY=7d
NEXT_PUBLIC_COOKIE_NAME=novatescribe_session

# Feature Flags
NEXT_PUBLIC_ENABLE_FAST_TRANSCRIPTION=true
NEXT_PUBLIC_ENABLE_ANALYTICS=true

# Performance
NEXT_PUBLIC_API_TIMEOUT=30000
NEXT_PUBLIC_MAX_RETRIES=3

# =================================
# AI-POWERED MEDICAL DIAGRAMS
# =================================

# AI-Powered Medical Diagram Generation Service
NEXT_PUBLIC_AI_DIAGRAM_API_KEY=your_ai_diagram_api_key_here
NEXT_PUBLIC_AI_DIAGRAM_BASE_URL=https://api.novate-ai-diagrams.com

# =================================
# AI INTEGRATION (OpenAI & NovateGPT)
# =================================

# OpenAI API Configuration
# Required for NovateGPT AI assistant and enhanced features
OPENAI_API_KEY=your_openai_api_key_here
OPENAI_MODEL=gpt-4o-mini

# =================================
# ICD-11 CODING (WHO API - Official)
# =================================

# WHO ICD-11 API for official medical coding
# Register at: https://icd.who.int/icdapi
# Apply for API access and get your client credentials
WHO_ICD11_CLIENT_ID=your_who_icd11_client_id_here
WHO_ICD11_CLIENT_SECRET=your_who_icd11_client_secret_here

# This replaces the previous ChatGPT-based approach to prevent hallucination
# Provides authoritative, accurate ICD-11 codes directly from WHO

# =================================
# RAG SYSTEM (VECTORIZATION)
# =================================

# Pinecone Vector Database (for RAG functionality)
PINECONE_API_KEY=your_pinecone_api_key_here
PINECONE_ENVIRONMENT=gcp-starter

# =================================
# OPTIONAL AI ENHANCEMENTS
# =================================

# Optional: Stable Diffusion API for custom medical diagrams
STABILITY_API_KEY=your_stability_api_key_here

# 3D Model Generation (Optional)
NEXT_PUBLIC_ENABLE_3D_DIAGRAMS=true
NEXT_PUBLIC_3D_MODEL_CACHE_DURATION=86400

# =================================
# PAYMENT INTEGRATION
# =================================

# Payment Gateway Configuration
# Note: All payment gateway keys (Stripe, Curlec/Razorpay) are handled by the backend
# No frontend payment keys needed - backend manages all payment gateway credentials

# Database Configuration
DATABASE_URL="postgresql://username:password@localhost:5432/novate_db"

# Authentication
NEXTAUTH_SECRET="your-secret-key-here"
NEXTAUTH_URL="http://localhost:3000"

# OpenAI Configuration
OPENAI_API_KEY="your-openai-api-key-here"

# Pinecone Configuration
PINECONE_API_KEY="your-pinecone-api-key-here"
PINECONE_ENVIRONMENT="your-pinecone-environment-here"
PINECONE_INDEX_NAME="your-pinecone-index-name-here"

# Email Configuration (for production contact form)
SMTP_HOST="smtp.gmail.com"
SMTP_PORT="587"
SMTP_USER="your-email@gmail.com"
SMTP_PASS="your-app-password"

# Backend API Configuration
NEXT_PUBLIC_BACKEND_URL="https://novatescribe-backend.onrender.com"
NEXT_PUBLIC_DEV_BACKEND_URL="http://localhost:3000"

# Sentry Configuration (optional)
SENTRY_DSN="your-sentry-dsn-here"

# Production Environment
NODE_ENV="development"



